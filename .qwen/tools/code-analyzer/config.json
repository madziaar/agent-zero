{
  "focus_areas": [
    "quality",
    "performance",
    "security",
    "maintainability"
  ],
  "detail_level": "standard",
  "include_qwen_optimizations": true,
  "performance_threshold": 0.7,
  "security_level": "standard",
  "custom_rules": {
    "max_function_length": 50,
    "preferred_patterns": [
      "list_comprehension",
      "generator_expression",
      "context_manager"
    ],
    "required_documentation": {
      "functions": true,
      "classes": true,
      "modules": false
    }
  },
  "language_specific": {
    "python": {
      "check_pep8": true,
      "check_type_hints": true,
      "check_docstrings": true,
      "performance_patterns": [
        "list_comprehension",
        "generator_expression",
        "memoization"
      ]
    },
    "javascript": {
      "check_eslint_rules": true,
      "check_modern_syntax": true,
      "framework_specific": []
    }
  },
  "output_format": {
    "include_metrics": true,
    "include_recommendations": true,
    "include_qwen_prompts": true,
    "format": "detailed"
  }
}